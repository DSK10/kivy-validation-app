<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols:1
            padding: 15,15
            spacing: 20,20
            Label:
                text: "User Login"
                font_size: "20sp"
            TextInput: 
                id: user
                hint_text: "Username"
                
            TextInput:
                id: passw
                hint_text: "Password"
                password: True
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.user.text, root.ids.passw.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x':0.5, 'center_y':0.6}
                    
            Label:
                id:fail
                text:""


        GridLayout:
            cols: 2
            size_hint: .2, .2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: .1, .7, 1,  1
            Button:
                text: "Sign Up"
                on_press: root.sign_up()
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: .1, .7, 1,  1

<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up"
        GridLayout:
            cols: 1
            TextInput:
                id: username 
                hint_text:"New Username"
            TextInput:
                id: password
                hint_text:"New Password"
                password: True
            Button:
                text: "Submit"
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)
            Button:
                text: "Go Back"
                on_press: root.main_screen()

<SignUpSuccess>:
    GridLayout:
        cols:1
        Label:
            text:"Sign up successful"
        Button:
            text:"login page"
            on_press: root.main_screen()

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 20,20
        spacing: 20,20
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source: 'hover_logout/logout_hover.png' if self.hovered else 'hover_logout/logout_nothover.png' 
                size_hint: .35, .35
                pos_hint:{'center_x':.93, 'center_y':.8}
        Label:
            text: "How do you feel?"
        TextInput:
            id:feel
            hint_text:"happy, sad, unloved "
        Button:
            text:"Enlighten me"
            on_press: root.enlight(root.ids.feel.text)
        ScrollView:
            Label:
                id: show
                text:""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]



<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpSuccess:
        name: "sign_up_success"
    LoginScreenSuccess:
        name: "login_screen_success"